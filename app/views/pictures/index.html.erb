
<h1>投稿一覧</h1>


    <% @pictures.each do |picture| %>
      <div class="feed">
          <%= picture.created_at.strftime("%Y-%m-%d %H:%M") %><br><br>
          <%= "User:    #{picture.user.name}   " %><br>
          <%= image_tag picture.image.url %><br>
          <%= "Content:   #{picture.content}" %><br><br>
          <%= link_to 'Show', picture,class: 'btn btn-primary' %>
          <% if current_user.id == picture[:user_id] %>
            <%= link_to 'Edit', edit_picture_path(picture),class: 'btn btn-primary' %>
            <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-primary' %>
          <% end %>
      </div>
      <br><br><br>
    <% end %>

<br>
